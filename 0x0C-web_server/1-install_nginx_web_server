#!/usr/bin/env bash
# Installs Nginx with the following configurations:
# Install nginx on your web-01
# server
# Nginx should be listening on port 80

sudo apt-get update
sudo apt-get install -y nginx

# Create a default Nginx configuration file with the desired content
echo "server {
    listen 80;
    server_name _;

    location / {
        echo 'Hello World!';
    }
}" | sudo tee /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx restart

# Check if Nginx is running
if sudo service nginx status | grep -q "active (running)"; then
    echo "Nginx has been successfully installed and configured."
else
    echo "Nginx installation and configuration failed."
fi
