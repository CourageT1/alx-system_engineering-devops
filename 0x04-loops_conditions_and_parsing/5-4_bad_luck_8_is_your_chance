#!/usr/bin/env bash
# Using a while loop and if, elif, else statements to display different messages based on loop iteration

count=1
while [ "$count" -le 10 ]
 do
    if [ "$count" -eq 4 ]
then
        echo "bad luck"
    elif [ "$count" -eq 8 ]
then
        echo "good luck"
    else
        echo "Best School"
    fi
    count=$((count + 1))
done
